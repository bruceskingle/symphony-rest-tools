<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3 http://maven.apache.org/xsd/assembly-1.1.3.xsd">
    <id>bin</id>
    <formats>
        <format>dir</format>
        <format>tar.gz</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>

    <fileSets>
        <fileSet>
            <directory>src/main/bash</directory>
            <outputDirectory>bin</outputDirectory>
            <excludes>
                <exclude>**/environment.sh</exclude>
            </excludes>
            <fileMode>555</fileMode>
            <directoryMode>755</directoryMode>
        </fileSet>
        <fileSet>
            <directory>src/package/bash</directory>
            <outputDirectory>bin</outputDirectory>
            <includes>
                <include>*.sh</include>
            </includes>
            <fileMode>555</fileMode>
            <directoryMode>755</directoryMode>
        </fileSet>
        <fileSet>
            <directory>src/main/certs</directory>
            <outputDirectory>certs</outputDirectory>
            <fileMode>444</fileMode>
            <directoryMode>755</directoryMode>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}/lib</directory>
            <outputDirectory>lib</outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
            <excludes>
            		<exclude>org.symphonyoss.symphony.tools.rest.dependencies-*</exclude>
            </excludes>
            <fileMode>444</fileMode>
            <directoryMode>755</directoryMode>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}</directory>
            <outputDirectory>lib</outputDirectory>
            <includes>
                <include>${project.artifactId}-${project.version}.jar</include>
            </includes>
            <fileMode>444</fileMode>
            <directoryMode>755</directoryMode>
        </fileSet>
        
    </fileSets>
</assembly>
